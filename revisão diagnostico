//ex2 letra b

#include <stdio.h>
#define tam 20

int main(){
    int v[tam];
    
    for(int i=1; i<=tam; i++){
        printf("Informe um valor para a posicao %d\n", i);
        scanf("%d", &v[i]);//leitura e armazenamento
    }
    
    int maior = v[tam];
    for(int i=1; i<=tam; i++){
        if(v[i]>maior){
            maior = v[i];
        }
    }
    printf("Maior: %d\n", maior);
    
    return 0;
}
//ex2 letra c

#include <stdio.h>
#define tam 20

int main(){
    int v[tam];
    
    for(int i=1; i<=tam; i++){
        printf("Informe um valor para a posicao %d\n", i);
        scanf("%d", &v[i]);//leitura e armazenamento
    }
    
    int menor_neg = 0;
    for(int i=1; i<=tam; i++){
        if(v[i]<menor_neg){
            menor_neg = v[i];
        }
    }
    printf("Menor elemento negativo: %d\n", menor_neg);
    
    return 0;
}
//ex2 letra d

#include <stdio.h>
#define tam 20

int main(){
    int v[tam];
    
    for(int i=1; i<=tam; i++){
        printf("Informe um valor para a posicao %d\n", i);
        scanf("%d", &v[i]);//leitura e armazenamento
    }
    
    int maior_neg = -1;
    for(int i=1; i<=tam; i++){
        if(v[i]<0 && v[i]>maior_neg ){
            maior_neg = v[i];
        }
    }
    
    if(maior_neg != -1){
        printf("Maior elemento negativo: %d\n", maior_neg);
    }else{
        printf("O maior elemento negativo nao foi encontrado");
    }
    
    return 0;
}

//ex3 letra a
#include <stdio.h>
float Soma_em_serie(int n);//somatorio soma valores

int main(){
    int n;
    
    printf("Informe um valor inteiro: \n");
    scanf("%d", &n);
    
    printf("Soma: %.2f", Soma_em_serie(n));
    
    return 0;
}
float Soma_em_serie(int n){
    float s = 2;//primeiro termo
    for(int i = 3; i<n+3; i++){ //primeiro denominador e 3 e vao ser 5 termos para somar
        if(i%2 != 0){
            s -= 1.0/i;
        }else{
            s += 1.0/i;
        }
    }
    return s;
}

//ex3 letra b

#include <stdio.h>
float Soma_em_serie(int n);//somatorio soma valores

int main(){
    int n;
    
    printf("Informe um valor inteiro: \n");
    scanf("%d", &n);
    
    printf("Soma: %.3f", Soma_em_serie(n));
    
    return 0;
}
float Soma_em_serie(int n){
    float s = -2;//primeiro termo
    for(int i = 3; i<n+3; i++){ //primeiro denominador e 3 e vao ser 5 termos para somar
        if(i%2 != 0){
            s += 1.0/i;
        }else{
            s -= 1.0/i;
        }
    }
    return s;
}

ex3 letra c
#include <stdio.h>
float Soma_em_serie(int n);//somatorio soma valores

int main(){
    int n;
    
    printf("Informe um valor inteiro: \n");
    scanf("%d", &n);
    
    printf("Soma: %.3f", Soma_em_serie(n));
    
    return 0;
}
float Soma_em_serie(int n){
    float s = 3;//primeiro termo
    float numerador = 2;
    float denominador  = 3;
    
    for(int i = 0; i<n; i++){ //primeiro denominador e 3 e vao ser 5 termos para somar
        if(i%2 != 0){//verifica se o indice e par ou impar
            s += numerador/denominador;
        }else{
            s -= numerador/denominador;
        }
        numerador +=2;
        denominador +=2;
    }
    return s;
}

//ex4 letra d
#include <stdio.h>
float Soma_em_serie(int n);//somatorio soma valores

int main(){
    int n;
    
    printf("Informe um valor inteiro: \n");
    scanf("%d", &n);
    
    printf("Soma: %.3f", Soma_em_serie(n));
    
    return 0;
}
float Soma_em_serie(int n){
    float s = -2;//primeiro termo
    float numerador = 3;
    float denominador  = 2;
    
    for(int i = 0; i<n; i++){ //primeiro denominador e 3 e vao ser 5 termos para somar
        if(i%2 != 0){//verifica se o indice e par ou impar
            s -= numerador/denominador;
        }else{
            s += numerador/denominador;
        }
        numerador += 3;
        denominador += 3;
    }
    return s;
}
#include <stdio.h>
//ex3 letra a
int main(){
    int n;
    printf("Entre com um numero de termo para o calculo expresso: \n");
    scanf("%d", &n);

    //printf("%d\n", n);
    //se n= 5
    if(n == 0){
        printf("S = 0\n");
    }else{
        int den = 3, num = 1;
        float s = 2;
        for(int termo = 2, den=3; termo<=n; termo++, den++){
            if(termo%2 == 0){
                s -= (float)num/den;
                //printf("%d/%d = %f\n", num, den, (float)num/den);
            }else{
                s += (float) num/den;
                //printf("%d/%d = %f\n", num, den, (float)num/den);
            }
            
        }
        printf("s = %.2f/n", s);
    }
    

    return 0;
}
#include <stdio.h>
//ex3 letra d
int main(){
    int n;
    printf("Entre com um numero de termo para o calculo expresso: \n");
    scanf("%d", &n);

    //printf("%d\n", n);
    //se n= 5
    if(n == 0){
        printf("S = 0\n");
    }else{
        float s = -2;
        for(int termo = 2, num = 3, den=2; termo<=n; termo++, num +=3, den+=3){
         //ou s+= pow(-1, termo)*(float) num/demo; assim nao precisa usar condicional
            if(termo%2 == 0){
                s += (float)num/den;
                printf("%d/%d = %f\n", num, den, (float)num/den);
            }else{
                s -= (float) num/den;
                printf("%d/%d = %f\n", num, den, (float)-num/den);
            }
            
        }
        printf("s = %.2f/n", s);
        //printf("num = %d\n", num);//fora do escopo()
    }
    

    return 0;
}//compilar com -lm(biblioteca matematica)
#include <stdio.h>

//ex4 letra a
int main(){
    int qtd_esp = 4;

    for(int qtd_ast = 1; qtd_ast<=5; qtd_ast++){
        for(int esp = 1; esp <= qtd_esp; esp++){
            printf(" ");
        }
        for(int ast = 1; ast <= qtd_ast; ast++){
            printf("*");
    }
        printf("\n");
    }
    
    return 0;
}

