#include <stdio.h>

int main(){
  int v[20];
for(int i=0; i<=20; i++){
  scanf("%d", &v[i]);
  printf("%d", v[i]);
}
int menor = v[0];
for(int i=0; i<20; i++){
    if(v[i]<menor)
menor = v[i];

printf("Menor: %d\n, menor)
